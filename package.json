{
  "name": "jujutsu-kaisen-uoc",
  "version": "1.0.0",
  "description": "PAC2",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "parcel src/index.html --port 1234",
    "start": "npm-run-all clean parcel:dev",
    "build": "npm-run-all clean parcel:build",
    "parcel:dev": "parcel",
    "parcel:build": "parcel build",
    "clean": "rimraf dist .parcel-cache",
    "lint": "eslint src --ext .js --quiet",
    "format": "prettier --write src/**/*.{js,css,sass,html,json,md}"
  },
  "keywords": [
    "dev",
    "tools"
  ],
  "author": "Jose Antonio Marmol <joseantoniomarmol@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.10.1",
    "@parcel/transformer-sass": "^2.10.1",
    "@parcel/transformer-webmanifest": "^2.10.1",
    "autoprefixer": "^10.4.16",
    "eslint-config-airbnb-standard": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.10.1",
    "posthtml-doctype": "^1.1.1",
    "posthtml-include": "^1.7.4",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sharp": "^0.31.3"
  },
  "dependencies": {
    "@parcel/compressor-brotli": "^2.10.1",
    "@parcel/compressor-gzip": "^2.10.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "parcel": {
    "@parcel/runtime-js": {
      "splitManifestThreshold": 10000
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-standard",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf"
  }
}
